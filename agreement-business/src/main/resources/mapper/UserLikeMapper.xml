<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vhans.bus.user.mapper.UserLikeMapper">

    <insert id="saveBatchUserLikeRecord">
        insert into u_user_like(user_id,type,type_id) values
        <foreach collection="likeIdList" item="likeId" separator=",">
            (#{userId},1,#{likeId})
        </foreach>
    </insert>

    <insert id="saveBatchUserLikeQuiz">
        insert into u_user_like(user_id,type,type_id) values
        <foreach collection="likeIdList" item="likeId" separator=",">
            (#{userId},2,#{likeId})
        </foreach>
    </insert>

    <insert id="saveBatchUserLikeComment">
        insert into u_user_like(user_id,type,type_id) values
        <foreach collection="likeIdList" item="likeId" separator=",">
            (#{userId},3,#{likeId})
        </foreach>
    </insert>
</mapper>
